<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ff775e">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onBackButtonPressed"
                android:text="돌아가기"
                android:backgroundTint="#ffb975"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="나의 버킷리스트"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonAddBuket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAddButtonPressed"
            android:text="버킷리스트 추가하기"
            android:backgroundTint="#ffb975"
            android:textSize="22sp"/>

        <ListView
            android:id="@+id/listViewBuket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="#ff775e"
            android:dividerHeight="2dp">

        </ListView>

        <Button
            android:id="@+id/buttonFinishBuket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onFinishListButtonPressed"
            android:text="완료한 버킷리스트"
            android:backgroundTint="#ffb975"
            android:textSize="26sp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>