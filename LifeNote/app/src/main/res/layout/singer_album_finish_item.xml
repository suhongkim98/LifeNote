<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:background="#faf4c0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ffb975">

            <TextView
                android:padding="3dp"
                android:id="@+id/bucketTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="친구와 함께 등산가기"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/bucketContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="친구와 한라산에 등산한다"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- "
                android:textColor="#555555"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8월 15일"
                android:textColor="#555555"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>